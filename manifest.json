
{
    "manifest_version": 3,
    "name": "Youtube Lyrics",
    "description": "Adds a button to the YouTube player that will show the lyrics of the song playing.",
    "version": "1.0",
    "permissions": [
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": ["*://music.youtube.com/*"],
            "js": ["youtube.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["style.css", "icon.svg"],
            "matches": ["*://music.youtube.com/*"]
        }
    ]
}
